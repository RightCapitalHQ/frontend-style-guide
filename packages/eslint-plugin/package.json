{
  "name": "@rightcapital/eslint-plugin",
  "version": "20.0.0",
  "description": "ESLint plugin for RightCapital",
  "license": "MIT",
  "main": "./lib/index.js",
  "exports": "./lib/index.js",
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RightCapitalHQ/frontend-style-guide.git",
    "directory": "packages/eslint-config"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "update:eslint-docs": "pnpm run build && eslint-doc-generator && prettier --write src/rules/**/*.md"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@rightcapital/tsconfig": "workspace:*",
    "@types/eslint": "^8.56.1",
    "@types/node": "20.10.8",
    "@vitest/ui": "^1.1.3",
    "eslint": "8.56.0",
    "eslint-doc-generator": "^1.6.1",
    "vitest": "^1.1.1"
  }
}
