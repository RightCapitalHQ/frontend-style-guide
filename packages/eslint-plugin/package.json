{
  "name": "@rightcapital/eslint-plugin",
  "version": "43.0.1",
  "description": "ESLint plugin for RightCapital",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RightCapitalHQ/frontend-style-guide.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "scripts": {
    "prebuild": "pnpm run clean",
    "build": "tsc --build tsconfig.lib.json",
    "clean": "tsc --build tsconfig.lib.json --clean",
    "prepack": "pnpm run build",
    "test": "vitest --coverage",
    "test:ui": "vitest --ui",
    "update:eslint-docs": "pnpm run build && eslint-doc-generator && prettier --write src/rules/**/*.md"
  },
  "dependencies": {
    "@typescript-eslint/utils": "8.26.1"
  },
  "devDependencies": {
    "@rightcapital/tsconfig": "workspace:*",
    "@types/eslint": "8.56.12",
    "@types/node": "22.13.17",
    "@typescript-eslint/parser": "8.26.1",
    "@typescript-eslint/rule-tester": "8.26.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "3.1.1",
    "eslint": "8.57.1",
    "eslint-doc-generator": "2.1.2",
    "typescript": "5.8.2",
    "vitest": "3.1.1"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "packageManager": "pnpm@10.2.1",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
