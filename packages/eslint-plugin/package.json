{
  "name": "@rightcapital/eslint-plugin",
  "version": "20.1.2",
  "description": "ESLint plugin for RightCapital",
  "license": "MIT",
  "main": "./lib/index.js",
  "exports": "./lib/index.js",
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RightCapitalHQ/frontend-style-guide.git",
    "directory": "packages/eslint-config"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "update:eslint-docs": "pnpm run build && eslint-doc-generator && prettier --write src/rules/**/*.md",
    "prepack": "pnpm run build"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@rightcapital/tsconfig": "workspace:*",
    "@types/eslint": "8.56.5",
    "@types/node": "20.11.29",
    "@vitest/ui": "1.4.0",
    "eslint": "8.57.0",
    "eslint-doc-generator": "1.7.0",
    "typescript": "5.4.2",
    "vitest": "1.4.0"
  }
}
